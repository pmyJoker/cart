  padding:15px;
}
.head{
  width:100%;
  text-align: center;
  margin-bottom: 20px;
}
.head image{
  width:52px;
  height:52px;
  margin-bottom: 10px;
}

.information{
  width:100%;
  border-top: 1px solid #ccc;
}
.information .content_head{
  width:100%;
  margin:30px 0;
  font-size: 16px;
}
.information .content_grant{
  width:100%;
